<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" ifconfig="payment/cc_recurring_hosted/active" name="customer-account-navigation-recurring-link">
                <arguments>
                    <argument name="path" xsi:type="string">dokucore/recurring</argument>
                    <argument name="label" xsi:type="string" translate="true">My Recurring Subscriptions</argument>
